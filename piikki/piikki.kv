<FileScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: 
                	root.manager.transition.direction = "right"
                	root.manager.current = "admin"

            Button:
                text: "Load"
                on_release:
                	root.manager.get_screen("admin").ids.image_input.text = filechooser.selection[0]
                	root.manager.transition.direction = "right"
                	root.manager.current = "admin"
                	
                	
	
