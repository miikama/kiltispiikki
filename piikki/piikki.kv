
<MenuScreen>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 0.2, 0.8, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
		background_color: [1, 0, 0, 1]
		orientation: "vertical"
		Label:
			text: "Kiltispiikki"
			font_size: 30
			size_hint: [1, 0.2]
		AnchorLayout:
			anchor_x: "center"
			anchor_y: "center"		
			Button:
				on_press:
					root.manager.transition.direction="left"		
					root.manager.current ="osto"
				text: "Osta jotain"
				anchor_x: "left"
				anchor_y: "left"
				size_hint: [0.3, 0.2]
			 
<BuyScreen>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 0.2, 0.8, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
		background_color: [1, 0, 0, 1]
		orientation: "vertical"
		Label:
			text: "Valikoima tuotteista"
			font_size: 30
			size_hint: [1, 0.2]
		AnchorLayout:
			anchor_x: "left"
			anchor_y: "bottom"	
			padding: (20,20)				
			Button:
				text: "Takaisin Menuun"
				on_press:
					root.manager.transition.direction="right"					 
					root.manager.current = "menu"
				anchor_x: "left"
				anchor_y: "left"
				size_hint: [0.3, 0.2]
				
				
				
				
				
				
				
				
